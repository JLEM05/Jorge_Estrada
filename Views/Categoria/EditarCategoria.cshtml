@model Jorge_Estrada.Models.Categoria

<h1>Editar Categoria</h1>

<form asp-action="EditarValorcategoria" autocomplete="off">
    <div class="form-group">
         <input type="text" class="form-control" name="Nombrecategoria" maxlength="100" placeholder="Nombre Categoria" value="@Model.Nombrecategoria" />
         <input type="hidden" name="CategoriaId" value="@Model.CategoriaId" />
    </div>
    <div class="form-group">
         <textarea class="form-control" name="Descripcion" maxlength="500"></textarea>
    </div>
   
    <div class="form-group">
        <input type="submit" value="Actualizar" class="btn btn-success" />
    </div>
</form>